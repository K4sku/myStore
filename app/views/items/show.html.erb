<p id="notice"><%= notice %></p>

<p>
  <strong>Sku:</strong>
  <%= @item.sku %>
</p>

<p>
  <strong>Product name:</strong>
  <%= @item.product_name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @item.price %>
</p>

<p>
  <strong>Category:</strong>
  <%= @item.category %>
</p>

<p>
  <strong>Color:</strong>
  <%= @item.color %>
</p>

<p>
  <strong>Size:</strong>
  <%= @item.size %>
</p>

<p>
  <strong>Storage count:</strong>
  <%= @item.storage_count %>
</p>

<% if @item.images.attached? %>
  <p>
    <% @item.images.each do |image| %>
      <%= image_tag image.variant(resize_to_fit: [200, 200]) %>
      <%= link_to 'Remove photos', delete_image_attachment_item_url(image.id),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    <% end %>
    <br>
  </p>
<% end %>

<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
